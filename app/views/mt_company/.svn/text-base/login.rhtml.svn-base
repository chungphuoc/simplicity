<%= begin_page_title "כניסה למערכת - חברות אחזקה" %><%=end_page_title%>
<%= start_form_tag :action=>:login %>
<fieldset>
	<legend>פרטים</legend>
	<table>
		<tr>
			<td><label for="username">שם משתמש:</label></td>
			<td><%= text_field_tag :username, params[:username] %></td>
		</tr>
		<tr>
			<td><label for="password">סיסמא:</label></td>
			<td><%= password_field_tag :password, params[:password] %></td>
		</tr>
	</table>
	<%= submit_tag 'התחבר'%>
</fieldset>
<%= end_form_tag %>