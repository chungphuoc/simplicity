<%= begin_page_title "רשימת בניינים" %><%= end_page_title %>
<table class="data_table" cellspacing="0">
  <tr>
	<th>כתובת</th>
	<th>אב-בית</th>
	<th>איש קשר</th>
	<th>תקלות</th>
	<th colspan="3">עריכה</th>
  </tr>
  
<% for bld in @buildings %>
  <tr class="<%=cycle('evenRow', 'oddRow')%>">
  	<td><%= link_to bld.hr_address, :action => "show_building", :id => bld %></td>
	<td><%= link_to (bld.has_mt_manager? ? h(bld.mt_manager.hr_name) : "[אין]"), :action => "show_building", :id => bld %></td>
	<td><% if ! bld.get_company_contact.nil? %>
			<%= bld.get_company_contact.hr_name%> - <%= bld.get_company_contact.mobile%>
		<% else %>[אין]<% end %></td>
	<td><%= bld.maintenance_requests.count %></td>
    <td class="centered"><%= link_to image_tag("edit.png"), :action => 'edit_building', :id => bld %></td>
  </tr>
<% end %>

</table>
