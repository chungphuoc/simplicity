body {
	direction: rtl;
	font: normal normal normal 0.7em "Arial Hebrew", Arial, sans-serif;
}

a,
a:hover,
a:visited,
a:active {
	text-decoration: none;
	color: black;
}

th {
	color: white;
	background-color: black;
}

th a {
	color: white;
}

td {
	border: 1px solid #888;
	padding: 0.2em 0.5em 0.2em 0.5em;
}

.footer {
	font-size: 0.7em;
	border-top: 1px solid #888;
	text-align: center;
	margin-top: 2em;
}